<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinasofti.ssm01.dao.GoodsInfoDao">



	<insert id="add" parameterType="GoodsInfo">
		insert into goods_info
		(goods_name,goods_price,goods_url,goods_desc,goods_state)
		value(#{goodsName},#{goodsPrice},#{goodsUrl},#{goodsDesc},#{goodsState})
	</insert>

	<select id="getList" parameterType="GoodsInfo" resultType="Map">
		select goods_id,goods_name,goods_price,goods_url,goods_state from goods_info
	</select>

	<select id="getGoodsInfo" parameterType="GoodsInfo" resultType="Map">
		select * from goods_info where goods_id = #{goodsId}
	</select>
</mapper>
